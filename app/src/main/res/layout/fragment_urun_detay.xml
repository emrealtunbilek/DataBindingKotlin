<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.emrealtunbilek.databindingkotlin.models.Urun"/>
        <variable name="urun" type="Urun"/>
        <variable name="miktar" type="Integer"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.UrunDetayFragment">

        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbUrunDegerlendirmeOrt" android:layout_marginTop="8dp"
                android:rating="@{urun.degerlendirmeNotu}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvDegerlendirmeSayisi"
                android:layout_marginEnd="8dp"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"/>
        <TextView
                android:text="@{String.valueOf(urun.degerlendirmeSayisi)}"
                android:layout_width="wrap_content"
                tools:text="( 9 )"
                android:layout_height="wrap_content"
                android:id="@+id/tvDegerlendirmeSayisi" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="@{urun.baslik}"
                android:layout_width="0dp"
                tools:text="Ürün Başlık"
                android:layout_height="wrap_content"
                android:id="@+id/tvurunBaslik" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rbUrunDegerlendirmeOrt"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorAccent"/>
        <ImageView
                android:src="@{urun.urunResim}"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:id="@+id/imageView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvurunBaslik" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"/>
        <TextView
                android:text="@{urun.kampanyaVarMi() ? String.valueOf(urun.kampanyaliFiyat) : String.valueOf(urun.fiyat)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20.99"
                android:id="@+id/tvFiyat" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textStyle="bold" android:textSize="30sp"
                android:textColor="@color/colorAccent"/>
        <TextView
                android:text="@{String.valueOf(urun.fiyat)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="23.99"
                android:visibility="@{urun.kampanyaVarMi() ? View.VISIBLE : View.INVISIBLE}"
                android:id="@+id/tvOrjinalFiyat" app:layout_constraintStart_toEndOf="@+id/tvFiyat"
                android:layout_marginStart="16dp"
                android:background="@drawable/ustunu_ciz"
                app:layout_constraintTop_toTopOf="@+id/tvFiyat" app:layout_constraintBottom_toBottomOf="@+id/tvFiyat"
                android:textStyle="bold" android:textSize="24sp"/>

        <com.google.android.material.button.MaterialButton

                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:icon="@drawable/ic_miktar_sec"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:text="@{urun.miktariAlveStringeCevir(miktar)}"
                app:layout_constraintTop_toBottomOf="@+id/tvFiyat" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:id="@+id/btnMiktarSec"
        />

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sepete Ekle"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnMiktarSec"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:id="@+id/btnSepeteEkle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>