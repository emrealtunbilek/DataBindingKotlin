<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable name="ogr" type="com.emrealtunbilek.databindingkotlin.Ogrenci"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
        <TextView
                android:text="@{ogr.isim}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvOgrenciAdi" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="204dp" app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"
                android:textSize="30sp"/>
        <TextView
                android:text="@{String.valueOf(ogr.numara)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNumara" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvOgrenciAdi" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textSize="18sp" android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>




